[Unit]
Description=Cardano Node Private
After=network.target

[Service]
User=ubuntu
Type=simple
WorkingDirectory=/usr/local/etc/cardano-node/private
ExecStart=/usr/local/cardano-node/bin/cardano-node run \
  --topology /usr/local/etc/cardano-node/private/config/topology.json \
  --database-path /usr/local/etc/cardano-node/private/db \
  --socket-path /usr/local/etc/cardano-node/private/node.socket \
  --port 3434 \
  --config /usr/local/etc/cardano-node/private/config/config.json
Restart=on-failure

[Install]
WantedBy=multi-user.target
